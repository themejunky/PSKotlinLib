<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mContainer"
    style="@style/WrapWrap">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/mPicContainer"
        style="@style/MatchWrap"
        android:background="@drawable/lib_container_round_corners">

        <ImageView
            android:id="@+id/mIcon"
            style="@style/WrapWrap"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>
    
    <TextView
        android:id="@+id/mText"
        style="@style/WrapWrap.Regular.Black.14"
        android:layout_marginTop="2dp"
        app:layout_constraintLeft_toLeftOf="@+id/mContainer"
        app:layout_constraintRight_toRightOf="@+id/mContainer"
        app:layout_constraintTop_toBottomOf="@+id/mPicContainer"/>

</android.support.constraint.ConstraintLayout>